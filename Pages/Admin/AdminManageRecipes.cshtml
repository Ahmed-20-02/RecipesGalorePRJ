@page
@model RecipesGalorePRJ.Pages.Admin.AdminManageRecipesModel
@{
    ViewData["Title"] = "Admin Manage Recipes";
    Layout = "AdminLayout";
}
<div class="view-all-recipes-container" style="display: flex; flex-direction: row; flex-wrap: wrap; justify-content: space-between;">
    @for (int i = 0; i < Model.recipesList.Count; i++)
    {
        <div class="each-recipe-container" style="display: inline; border: 1px solid white; padding-bottom: 15px; margin-bottom: 15px;">
            <a style="color: white; text-decoration: none;" asp-page="/User/UserRecipeView" asp-route-id="@Model.recipesList[i].RecipeId">
                <img class="recipe-thumbnail" src="~/Files/@Model.recipesList[i].File" style="height: 150px; width: 250px;" />
                <p style="text-align:center">@Model.recipesList[i].RecipeName</p>
                <p style="text-align:center">Cooking Time: @Model.recipesList[i].RecipeCookingTime Minutes</p>
            </a>
            <a style="text-align:center; color: white; display: block;" asp-page="/Admin/AdminUpdate" asp-route-id="@Model.recipesList[i].RecipeId">Update</a>
            <a style="text-align:center; color: white; display: block;" asp-page="/Admin/AdminDelete" asp-route-id="@Model.recipesList[i].RecipeId">Delete</a>
        </div>
    }
</div>
@page
@model RecipesGalorePRJ.Pages.Admin.AdminViewAllRecipes
@{
    ViewData["Title"] = "Admin View All Recipes";
    Layout = "AdminLayout";
}
<div class="View-All-Recipes-Title">
    @ViewData["Title"]
</div>
<div class="view-all-recipes-container" style="display: flex; flex-direction: row; flex-wrap: wrap; justify-content: space-between;">
    @for (int i = 0; i < Model.RecipeList.Count; i++)
    {
        <div class="each-recipe-container" style="display: inline; border: 1px solid white; padding-bottom: 15px; margin-bottom: 15px;">
            <a style="color: white; text-decoration: none;" asp-page="/User/UserRecipeView" asp-route-id="@Model.RecipeList[i].RecipeId">
                <img class="recipe-thumbnail" src="~/Files/@Model.RecipeList[i].File" style="height: 150px; width: 250px;" />
                <p style="text-align:center">@Model.RecipeList[i].RecipeName</p>
                <p style="text-align:center">Cooking Time: @Model.RecipeList[i].RecipeCookingTime Minutes</p>
            </a>
        </div>
    }
    <div class="filter box">
        <form>
            <select type="text" asp-for="FLTR" style="width: 50px;">
                <option>All</option>
                @foreach (var item in Model.FilterType)
                {
                    <option>@item</option>
                }
            </select>
            <input type="submit" value="Filter" />
        </form>
    </div>
</div>
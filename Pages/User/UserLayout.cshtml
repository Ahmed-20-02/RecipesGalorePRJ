<!doctype html>
<html>
<head>
    <meta charset=”utf-8”>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Recipes Galore | @ViewData["Title"]</title>
    <link rel="icon" href="~/Images/recipes-galore-logo.png" type="image/png" />
    <link rel="stylesheet" href="~/css/desktop.css" media="only screen">
</head>
<body>
    <div id="container">
        <header>
            <div class="header">
                <div class="header-logo-title-account">
                    <img src="~/Images/recipes-galore-logo.png" class="Logo">
                    <h1>@ViewData["Title"]</h1>
                    <div class="account">
                        <img src="~/Images/logged-in-icon.png" class="UserLoggedOut">
                        <a id="LoginOrSignup" asp-page="/Guest/Logout">Sign Out</a>
                    </div>
                </div>
                <div class="navigation">
                    <a asp-page="/User/UserIndex">Home</a>
                    <a href="example.html">Hottest</a>
                    <div class="dropdown-nav">
                        <a class="dropdown-categories" href="example.html">Categories</a>
                        <div class="dropdown-content">
                            <div class="dropdown-cooking">
                                <p>Cooking Recipes by Cuisine Type</p>
                                <a href="example.html">Indian</a>
                                <a href="example.html">Chinese</a>
                                <a href="example.html">Italian</a>
                                <a asp-page="/User/UserView">View All</a>
                            </div>
                            <div class="dropdown-dietary">
                                <p>Cooking Recipes by Dietary</p>
                                <a href="example.html">Halal</a>
                                <a href="example.html">Vegan</a>
                                <a href="example.html">Vegetarian</a>
                                <a asp-page="/User/UserView">View All</a>
                            </div>
                            <div class="dropdown-baking">
                                <p>Baking Recipes</p>
                                <a href="example.html">Cakes</a>
                                <a href="example.html">Cookies</a>
                                <a href="example.html">Muffins</a>
                                <a asp-page="/User/UserView">View All</a>
                            </div>
                        </div>
                    </div>
                    <a href="example.html">Contact Us</a>
                    <div>
                        <form>
                            <input type="text" placeholder="Search..." />
                            <button>Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </header>
        <section>
            @RenderBody()
        </section>
        <footer>
            <p>Copyright &copy; 2021 Recipe Galore</p>
        </footer>
    </div>
    <script src="~/js/js.js"></script>
</body>
</html>

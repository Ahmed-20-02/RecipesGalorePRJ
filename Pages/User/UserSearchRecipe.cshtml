@page
@model RecipesGalorePRJ.Pages.User.UserSearchRecipePageModel
@{
    ViewData["Title"] = Model.SearchString;
    Layout = "UserLayout";
}
<div class="View-All-Recipes-Title">
    @ViewData["Title"]
</div>
<div class="search-container">
    <form method="post">
        <div>
            <input type="text" asp-for="SearchString" placeholder="Search for Recipes..." />
            <button type="submit">Search</button>/>
        </div>
    </form>
    <div class="view-all-recipes-container" style="display: flex; flex-direction: row; flex-wrap: wrap; justify-content: space-between;">
        @for (int i = 0; i < Model.RecipeList.Count; i++)
        {
            <div class="each-recipe-container" style="display: inline; border: 1px solid white; padding-bottom: 15px; margin-bottom: 15px;">
                <a style="color: white; text-decoration: none;" asp-route-id="@Model.RecipeList[i].RecipeID">
                    <img class="recipe-thumbnail" src="~/Files/@Model.RecipeList[i].File" style="height: 150px; width: 250px;" />
                    <p style="text-align:center">@Model.RecipeList[i].Name</p>
                    <p style="text-align:center">Cooking Time: @Model.RecipeList[i].CookingTime Minutes</p>
                </a>
            </div>
        }
    </div>
</div>

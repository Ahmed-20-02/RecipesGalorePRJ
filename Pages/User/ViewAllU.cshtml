@page
@model RecipesGalorePRJ.Pages.User.ViewAllUModel
@{
}
<div>
    <p>Select Filter :</p>
    <form>
        <select type="text" asp-for="FLTR" style="width: 50px;">
            <option>All</option>
            @foreach (var item in Model.FilterType)
            {
                <option>@item</option>
}
        </select>
        <input type="submit" value="Filter" />
    </form>
</div>
@for (int i = 0; i < Model.RecipeList.Count; i++)
{
    <div>
        <div>@Model.RecipeList[i].File</div>
        <div>@Model.RecipeList[i].RecipeName</div>
    </div>
}
